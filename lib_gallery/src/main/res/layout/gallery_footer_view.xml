<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/gallery_bg"
    android:paddingBottom="@dimen/xxx_small"
    android:paddingTop="@dimen/xxx_small">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/xx_small"
        android:layout_marginTop="@dimen/xx_small"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gallery_text_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/small"
            android:padding="@dimen/x_small"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_standard" />

        <bsoft.com.lib_gallery.custom.RoundedCornerLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/small"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:id="@+id/next_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/small"
                android:paddingRight="@dimen/small"
                android:src="@drawable/ic_back_gallery" />
        </bsoft.com.lib_gallery.custom.RoundedCornerLayout>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/footer_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>